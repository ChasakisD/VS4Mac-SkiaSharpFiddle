<?xml version="1.0" encoding="UTF-8"?>
<Addin
    id = "MonoDevelop.SkiaSharpFiddle">
    <Header>
        <Name>Color Helper Addin</Name>
        <Description>A new tool to preview SkiaSharp code.</Description>
        <Author>Javier Suárez Ruiz</Author>
        <Copyright>Javier Suárez Ruiz</Copyright>
        <Url>https://github.com/jsuarezruiz/VSMac-SkiaSharpFiddle</Url>
    </Header>       
    <Extension 
        path="/MonoDevelop/Ide/Commands">
        <Command
            _label="SkiaSharp Fiddler" 
             id="VS4Mac.SkiaSharpFiddle.Commands.SkiaSharpFiddleCommand"
             defaultHandler="VS4Mac.SkiaSharpFiddle.Commands.SkiaSharpFiddleCommand"/>
    </Extension>
    <Extension 
        path = "/MonoDevelop/Ide/MainMenu/Tools">
        <CommandItem 
            id="VS4Mac.SkiaSharpFiddle.Commands.SkiaSharpFiddleCommand"/>
    </Extension> 
</Addin>